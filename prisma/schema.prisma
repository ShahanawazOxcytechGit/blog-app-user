generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id             Int    @id @default(autoincrement())
  email          String @unique
  username       String
  password       String
  hashedPassword String
  access         String
  action         String
}

model TutorialTopic {
  id       Int     @id @default(autoincrement())
  title    String  @db.VarChar(255)
  slug     String?
}

model TutorialSubtopic {
  id       Int     @id @default(autoincrement())
  title    String
  metaData String?
  content  String
  slug     String
}

model Blog {
  id       Int     @id @default(autoincrement())
  title    String  @db.VarChar(255)
  metaData String?
  image    String?
  content  String?
  slug     String?
}

